          doctype declaration
     'end-tag'
          end-tag
     'ignored'
          ignored marked section
     'ms-start'
          marked section end, if not ignored
     'ms-end'
          marked section start, if not ignored
     'pi'
          processing instruction
     'sgml'
          SGML declaration
     'start-tag'
          start-tag
     'entity'
          entity reference
     'shortref'
          short reference


